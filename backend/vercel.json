{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/ping", "dest": "api/ping.js" },
    { "src": "/api/create-payment-intent", "dest": "api/create-payment-intent.js" },
    { "src": "/api/payment-intent", "dest": "api/payment-intent.js" },
    { "src": "/api/create-checkout-session", "dest": "api/create-checkout-session.js" },
    { "src": "/api/checkout-session", "dest": "api/checkout-session.js" },
    { "src": "/api/stripe/webhook", "dest": "api/stripe/webhook.js" }
  ],
}
