{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "gustomediterraneoroma.it" }],
      "destination": "https://www.gustomediterraneoroma.it/$1",
      "permanent": true
    },
    {
      "source": "/public/images/(.*)",
      "destination": "/images/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.gustomediterraneoroma.it/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/"
    }
  ],
  "git": { "deploymentEnabled": false }
}
